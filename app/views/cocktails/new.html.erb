<div class="banner" style= "background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.5)), url('https://images.unsplash.com/photo-1496134732667-ae8d2853a045?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=e4dd1c9106a69065ccfa21a36cfb53b1&auto=format&fit=crop&w=1050&q=80');">
      <div class="banner-content">
        <%= simple_form_for [@cocktail] do |f| %>
          <%= f.error_notification %>
          <span class = "form-input"><%= f.input :name, label: false, placeholder: "Cocktail name" %></span>
          <%= f.input :photo %>
          <%= f.input :photo_cache, as: :hidden %>
          <%= f.submit "add cocktail", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
