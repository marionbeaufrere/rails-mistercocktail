<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.5)), url('https://images.unsplash.com/photo-1484542959923-de288ec85ce1?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=4fc364b7f676a708060858fc5592caee&auto=format&fit=crop&w=1051&q=80');">
      <div class="banner-content">
        <h1>Mister Cocktail</h1>
        <p>Get drunk and be happy</p>
      </div>
    </div>

<div class="container" id="home-cocktails">
  <h2 class="text-center"> All our Cocktails </h2>
  <h4 class="text-center">We have <%= @cocktails.length %> cocktails available</h4>
    <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="col-xs-12 col-sm-4 col-md-3">
          <div class="card">
            <figure id="front">
              <%= cl_image_tag cocktail.photo, width: 265, crop: :fill, class: "card-img"  %>
              <h3>
                <%= link_to cocktail.name.capitalize, cocktail_path(cocktail) %>
              </h3>
            </figure>
            <figure id="back">
              <h3> Ingredients: </h3>
              <ul>
                <% cocktail.doses.each do |dose| %>
                  <li>
                    <%= dose.description %>
                    <%= dose.ingredient.name %>
                  </li>
                <% end %>
              </ul>
            </figure>
          </div>
        </div>
      <% end %>
      <br>
    </div>
  <h4 class="text-center"><div class = "btn btn-primary"><%= link_to "Create a new cocktail", new_cocktail_path %></div></h4>
</div>

