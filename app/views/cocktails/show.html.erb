<div class = "container">
<h2> What is inside a <%= @cocktail.name %>?</h2>
<ul>
  <% @doses.each do |dose| %>
    <li>
      <%= dose.description %>
      <%= dose.ingredient.name %>
      <%= link_to dose_path(dose), method: "DELETE", data: { confirm: "Are you sure you want to delete this ingredient?"} do %>
        <i class="fa fa-trash"></i>
      <% end %>
    </li>
  <% end %>
</ul>
<p><%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail) %></p>

<h4><%= link_to "Back to the list of cocktails", cocktails_path %></h4>
</div>
